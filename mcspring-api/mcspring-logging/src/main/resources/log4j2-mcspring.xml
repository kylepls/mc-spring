<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <RollingRandomAccessFile name="base"
                                 fileName="logs/mcspring/mcspring.log"
                                 filePattern="logs/mcspring/mcspring-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} %5p : %m%n</pattern>
            </PatternLayout>
            <Policies>
                <OnStartupTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="10" fileIndex="min"/>
        </RollingRandomAccessFile>
    </Appenders>

    <Loggers>
        <Logger name="mcspring" level="all" additivity="true">
            <AppenderRef ref="base"/>
        </Logger>
    </Loggers>
</Configuration>
